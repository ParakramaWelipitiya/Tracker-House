<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Vertical gradient from light blue to very light blue -->
    <gradient
        android:startColor="#A3D8F4"
    android:centerColor="#D0ECFF"
    android:endColor="#FFFFFF"
    android:angle="270"
    android:type="linear" />

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Soft light border -->
    <stroke
        android:width="1dp"
        android:color="#0080B7D9" />

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
